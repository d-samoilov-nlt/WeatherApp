<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorScreenBackground</item>
    </style>

    <style name="SimpleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorSimpleText</item>
        <item name="android:textSize">@dimen/simple_text_size</item>
        <item name="fontFamily">@font/sf_regular</item>
    </style>

    <style name="ErrorText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorErrorText</item>
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textSize">@dimen/simple_text_size</item>
    </style>

    <style name="TitleText" parent="SimpleText">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/colorTabAppearanceText</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="LocationTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabIndicatorColor">@color/colorTabIndicator</item>
        <item name="tabSelectedTextColor">@color/colorFocusedSimpleText</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ActionButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_margin">@dimen/default_view_margin</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorSimpleTextLight</item>
        <item name="android:background">@drawable/action_button_selector</item>
    </style>

    <style name="ForecastDetailsToolbarButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">@dimen/round_button_size</item>
        <item name="android:layout_height">@dimen/round_button_size</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
